<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nerolac Previews </title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datatables")
    @Scripts.Render("~/bundles/modernizr")
    @*@Scripts.Render("~/bundles/datatables")*@
    <style>
        #content {
            position: relative;
        }

            #content img {
                position: absolute;
                top: 0px;
                left: -115px;
                right: -104px;
                width: 105px;
                height: 50px;
            }

    </style>
</head>
<body>  
    <div class="navbar navbar-inverse navbar-fixed-top" style="color:wheat;">
        <div class="container">       
            <div id="content">
                <img src="~/Images/colour-my-space-logo.jpg" />
            </div>
            <div class="row" style="margin-top: 15px;">
                <div class="col-md-3" style="width:650px;" >
                    <b> @Session["UserCategory"].ToString() - @Session["UserID"].ToString(), @Session["UserName"].ToString() , Depot :  @Session["Depot"].ToString() </b>
                </div>
                @*<div class="col-md-4"><b>Last Login  :  @Session["LastLogin"].ToString()</b></div>*@
               
                <div class="col-md-3">
                    <b> @DateTime.Now.ToString("ddd, dd MMM yyy hh:mm:ss tt") </b>
                </div>
                <div class="col-md-1">
                    <a href='@Url.Action("Logout", "Login")' onclick="return confirm('Exiting from MyViz?  Confirm')" data-toggle="tooltip" title="Exit from MyViz"  data-placement="bottom">
                        <span class="glyphicon glyphicon-log-out" style="color:#fff"></span>
                    </a>
                </div>
            </div>
            @*<div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>*@
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="font-size:11px;">
                @*&copy; @DateTime.Now.Year -*@
                @*Disclaimer - MyViz does its best to provide a best match of colours with the Shade Cards.
                However, factors such as viewing medium, screen size & resolution, source quality, lighting, shades selected etc. can also impact. <br/>*@
                Colourmyspace.co.in
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
