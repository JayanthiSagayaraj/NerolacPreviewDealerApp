<table id="assets-data-table" class="table table-striped table-bordered" style="width:100%;">

    <tbody>
        @*<tr style="background-color: red; padding-bottom: 20px; justify-content: center;font:bold;">
            <td>
                FlashMessages
            </td>
        </tr>*@

        @if (Model.FlashMessagesLists != null && Model.FlashMessagesLists.Count > 0)
        {
            <tr style="background-color:white;padding-bottom:20px;">
                <td>
                </td>
            </tr>
            foreach (var asset in Model.FlashMessagesLists)
            {
                var colorcodeSub = "";
                var colorcodeText = "";
                if (asset.msgtype == "Information")
                {
                    colorcodeSub = "#6BC43C";
                    colorcodeText = "#D6EEC8";

                    //colorcodeSub = "#51A351";
                    //colorcodeText = "#51A351";
                }
                else if (asset.msgtype == "Alert")
                {
                    colorcodeSub = "#FF4638";
                    colorcodeText = "#FFCDBD";
                    //colorcodeSub = "#BD362F";
                    //colorcodeText = "#BD362F";

                }
                else
                {
                    colorcodeSub = "#FFEC12";
                    colorcodeText = "#FFF9C3";
                    //colorcodeSub = "#F89406";
                    //colorcodeText = "#F89406";

                }
                <tr style="background-color: @colorcodeSub;color:Black;font-size:18px;font-weight:100;">
                    <td>
                        @asset.Title1
                    </td>
                </tr>
                <tr style="background-color:@colorcodeText;color:black;">
                    <td>
                        @asset.Text1
                    </td>
                </tr>
                <tr style="background-color:white;padding-bottom:20px;">
                    <td>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr style="background-color:white;font-weight:400;color:black;"> No messages present</tr>
        }
    </tbody>
</table>


